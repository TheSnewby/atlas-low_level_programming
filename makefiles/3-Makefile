CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o) # or $(wildcard *.o)
NAME = school
RM = rm

all: $(NAME)

school: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

%.o: %.c
	$(CC) -c $< -o $@

clean:
	$(RM) -f $(NAME)

oclean:
	$(RM) -f $(OBJ)

fclean:
	$(RM) -f $(NAME) $(OBJ)

.PHONY: re clean oclean fclean

re: fclean
	$(MAKE) -f $(MAKEFILE_LIST) all
